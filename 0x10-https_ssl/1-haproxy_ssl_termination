global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy
defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000

frontend node
	default_backend servers
	bind *:80
frontend www-https
	bind 0.0.0.0:443 ssl crt /etc/letsencrypt/archive/www.bestrookie.tech/www.bestrookie.tech.pem
	acl letsencrypt-acl path_beg /.well-known/some-challenge/
	use_backend letsencrypt-backend if letsencrypt-acl
	default_backend servers
backend servers
	mode http
	stats enable
	stats uri /haproxy?stats
	option httpclose
	balance roundrobin
	server 172785-web-01 100.25.151.158:80 check
	server 172785-web-02 34.207.57.64:80 check
backend letsencrypt-backend
	server letsencrypt 127.0.0.1:54321
